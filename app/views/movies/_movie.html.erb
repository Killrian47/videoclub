<!-- Button trigger modal -->
<div class="movie-card col-3 mb-2 text-wrap text-center">
  <div data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= index %>" style="cursor: pointer;">
    <img src="<%= movie.poster_url %>" alt="<%= movie.title %>">
    <div class="movie-card__content">
      <small class="movie-card__title"><%= movie.title %> (<%= movie.year %>)</small>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop<%= index %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel"><%= movie.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-8">
            <iframe src="https://www.youtube.com/embed/zSWdZVtXT7E" width="100%" height="400">
            </iframe>
          </div>
          <div class="col-4 text-center">
            <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" height="400" >
          </div>
          <div class="mt-3">
            <p><strong>Director:</strong> <%= movie.director %></p>
            <p><strong>Main actors:</strong> <%= movie.actors %></p>
            <p><strong>Plot:</strong> <%= movie.description %></p>
            <p><strong>Release date:</strong> <%= movie.year %></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close the modal</button>
      </div>
    </div>
  </div>
</div>