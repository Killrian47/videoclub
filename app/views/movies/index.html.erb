<%= render "layouts/page", search_on: movies_path, title: "All the movies", image_url: "https://media.senscritique.com/media/000008596968/0/melancholia.jpg", movie_title: "Melancholia", position: "center", movie_rating: "7.1" %>
<div class="container d-flex flex-column flex-wrap px-5 py-3">
  <div class="row">
    <% if @movies.empty? %>
      <div class="col-12 text-center">
        <h2>No movies found</h2>
      </div>
    <% else %>
      <% @movies.each_with_index do |movie, index| %>
        <%= render "movie", movie: movie, index: index, carousel: false %>
      <% end %>
    <% end %>
    <div class="d-flex justify-content-center">
      <%= paginate @movies %>
    </div>
  </div>
</div>
