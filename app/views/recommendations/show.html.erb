  <div class="search-results">
    <h3>Results for <%= @gpt_query.query %>:</h3>
    <% @movies.each do |movie| %>
      <div class="movie">
        <h4><%= movie.title %></h4>
        <p><%= movie.description %></p>
        <!-- Add more movie details as needed -->
      </div>
    <% end %>
  </div>
</div>
