<div class="container px-5">
  <div class="d-flex justify-content-between w-100 align-items-center my-5">
    <h2 class=""><i><%= @gpt_query.query.match?(/ttd*/) ? "Recommended from your list" : "Results for #{@gpt_query.query}" %></i></h2>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-primary mb-3' %>
  </div>
  <section class="container">
    <div class="row">
      <% @gpt_query.query_movies.each do |query_movie| %>
        <%= render "recommendations/card_result", movie: query_movie.movie, query: query_movie %>
      <% end %>
    </div>
  </section>
</div>
