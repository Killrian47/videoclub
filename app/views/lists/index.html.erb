<h1 class="text-center my-3">Your profile</h1>

<div class="row w-75 mx-auto">
  <h2 class="text-center">Your lists</h2>
  <div class="col-8 mx-auto mt-3">
    <% @lists.each do |list| %>
      <div class="d-flex align-items-center justify-content-between bg-secondary p-3 rounded">
      <%= link_to list.name, list, class: "nav-link text-white" %>
      <div class=" d-flex align-items-center gap-3">
        <span class="badge text-bg-secondary"><%= list.movies.count %></span>
        <%= link_to settings_list_destroy_path(list), class: "text-danger", data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to delete this list?"
        } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>