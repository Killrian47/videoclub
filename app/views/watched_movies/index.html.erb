<h1>Movies Watched</h1>

<% if @watched_movies.any? %>
  <ul>
    <% @watched_movies.each do |watched_movie| %>
      <li>
        <%= link_to watched_movie.movie.title, movie_path(watched_movie.movie) %>
        <%= link_to "Remove", watched_movie_path(watched_movie), method: :delete %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No movies watched yet</p>
<% end %>
